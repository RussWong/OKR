			<%= image_tag "logo120.png" %>
			</div>
			<br>
		<div id="daohang">
			快速访问&nbsp;|
		</div>
		<div class="fl">
			<div id="app"></div>
        <script type="text/babel">
     var WebSite = React.createClass({
      render: function() {
        return (
          <div>
            <Link site={this.props.site} />
            <Link1 site1={this.props.site1} />
            <Link2 site2={this.props.site2} />
            <Link3 site3={this.props.site3} />
          </div>
        );
      }
    });

    var Link = React.createClass({
      render: function() {
        return (
          <a href={this.props.site}>
            <h5 title="查看所有的第一条OKR详细记录">OKR 详情1&nbsp;|</h5>
          </a>
        );
      }
    });

    var Link1 = React.createClass({
      render: function() {
        return (
        
          <a href={this.props.site1}>
          <div id="show2" title="查看所有的第二条OKR详细记录">
            OKR 详情2&nbsp;|
            </div>
          </a>
          
        );
      }
    });

     var Link2 = React.createClass({
      render: function() {
        return (
        
          <a href={this.props.site2}>
          <div id="edit" title="编辑所有的第一条OKR记录">
            OKR 编辑1&nbsp;|
            </div>
          </a>
          
        );
      }
    });

    var Link3 = React.createClass({
      render: function() {
        return (
        
          <a href={this.props.site3}>
          <div id="edit2" title="编辑所有的第二条OKR记录">
            OKR 编辑2&nbsp;|

            </div>
          </a>
          
        );
      }
    });


    ReactDOM.render(
      <WebSite site=" http://localhost:3000/okrs/1" site1="http://localhost:3000/okrs/2" site2=" http://localhost:3000/okrs/1/edit" site3=" http://localhost:3000/okrs/2/edit"  />,
      document.getElementById('app')
    );
    </script>
    		</div>
		</div>

